  body
    style.
      .index {
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 50px 20px;
      }
      .index__container {
        width: 100%;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 20px;
        padding-right: 20px;
        position: relative;
      }
      .index__list {
      }
      .index__title {
        width: 100%;
        text-align: center;
        font-size: 24px;
        margin: 0 0 40px;
      }
      .index__subtitle {
        margin: 0 0 15px;
        font-weight: bold;
      }
      .index__row {
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        margin: 0 0 30px;
      }
      @media screen and (max-width: 1024px) {
        .index__row {
          flex-direction: column;
          align-items: center;
        }
      }
      .index__col {
        margin: 0 40px;
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        flex-direction: column;
      }
      @media screen and (max-width: 1024px) {
        .index__col {
          margin: 0 0 30px;
          width: 50%;
        }
      }
      .index__link {
        margin: 0 0 10px;
        color: #000;
        font-family: Georgia;
      }
    section.index
      .index__container
        h1.index__title Список страниц
        .index__row
          .index__col
            .index__subtitle Разное
            a.index__link(href="index.html") Главная
